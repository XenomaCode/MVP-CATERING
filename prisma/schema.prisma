generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"  // Puedes cambiar a "postgresql" o "mysql" para producci√≥n
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(COLLABORATOR)
  events        Event[]
}

enum Role {
  ADMIN
  COLLABORATOR
}

model InventoryItem {
  id          String    @id @default(cuid())
  name        String    @unique
  category    String
  quantity    Int
  description String?
  eventItems  EventItem[]
}

model Event {
  id          String    @id @default(cuid())
  name        String
  date        DateTime
  location    String
  description String?
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  items       EventItem[]
}

model EventItem {
  id            String        @id @default(cuid())
  eventId       String
  inventoryId   String
  quantity      Int
  event         Event         @relation(fields: [eventId], references: [id])
  inventoryItem InventoryItem @relation(fields: [inventoryId], references: [id])
}